server {
	listen 443 ssl default_server;
	listen [::]:443 ssl default_server;

	ssl_certificate /etc/letsencrypt/live/xcf.berkeley.edu/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/xcf.berkeley.edu/privkey.pem;

	ssl_dhparam /etc/ssl/certs/dhparam.pem;

	include snippets/ssl-params.conf;

	root /var/www/html/xcf.berkeley.edu/;

	# Add index.php to the list if you are using PHP
	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		rewrite ^/gmail$ https://mail.google.com/a/xcf.berkeley.edu last;
		rewrite ^/gdrive$ https://drive.google.com/a/xcf.berkeley.edu last;
		rewrite ^/gadmin https://admin.google.com/a/xcf.berkeley.edu last;

		try_files $uri $uri/ $uri.html =404;
	}
	
	location ~ /.well-known {
                allow all;
        }

        location ~ /historical/archives/1997-07-11 {
	        autoindex on;
        }
}

server {
	listen 80;
	listen [::]:80;
	server_name _;
	return 301 https://xcf.berkeley.edu$request_uri;
}
